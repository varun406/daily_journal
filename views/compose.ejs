<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="POST">


    <div class="form-group">
        <label for="title">Title</label>
        <input id="title" type="text" name="postTitle" class="form-control">
    </div>


    <div class="form-group">
        <label for="post">Post</label>
        <textarea id="post" class="form-control" name="postDescription" id="" cols="80" rows="5"></textarea>
    </div>


    <button type="submit" name="publishBtn" class="btn btn-primary">Publish</button>
    
</form>

<%- include("partials/footer") -%>